<h1>Drivers</h1>
<ul class="profiles">
  <% @drivers.each do |driver|%>
    <li> 
    <%= image_tag "til-the-end.png" %>
      <h4><%= link_to driver.name, driver_path(driver)%></h4>
      <div class="actions">
        <%= "VIN Number: #{driver.vin}" %>
        <%= link_to "Edit", edit_driver_path(driver)%> 
        <%= link_to "Delete", driver_path(driver), method: :delete, data: {confirm: "Are you sure?"} %>
      </div>
    </li>
  <%end%>
</ul>

