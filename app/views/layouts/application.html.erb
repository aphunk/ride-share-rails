<!DOCTYPE html>
<html>
  <head>
    <title>RideShareRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <style>
    @import url('https://fonts.googleapis.com/css?family=Montserrat:300,600,700');
    </style>
  </head>

  <body>
    <header>
    <%= link_to image_tag('ride-connect-logo.png'), root_path %> <a href="/"></a>
      <nav>
        <ul>
          <li >
            <%= link_to "Passengers", passengers_path %>
          </li>
          <li>
            <%= link_to "Drivers", drivers_path %>
          </li>
          <li>
            <%= link_to "Add a Passenger", new_passenger_path %>
          </li>
          <li>
            <%= link_to "Add a Driver", new_driver_path %>
          </li>
        </ul>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
